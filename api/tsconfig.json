{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "types": [
      "@adonisjs/core",
      "@adonisjs/auth"
    ],
    "paths": {
      "#repositories/*": [
        "./app/repositories/*"
      ]
    }
  }
}